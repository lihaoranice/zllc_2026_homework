/**
  * @brief  The application entry point.
  * @retval int
  */
int main(void)
{

  /* USER CODE BEGIN 1 */

  /* USER CODE END 1 */

  /* MCU Configuration--------------------------------------------------------*/

  /* Reset of all peripherals, Initializes the Flash interface and the Systick. */
  HAL_Init();

  /* USER CODE BEGIN Init */

  /* USER CODE END Init */

  /* Configure the system clock */
  SystemClock_Config();

  /* USER CODE BEGIN SysInit */

  /* USER CODE END SysInit */

  /* Initialize all configured peripherals */
  MX_GPIO_Init();
  MX_DMA_Init();
  MX_CAN_Init();
  MX_USART1_UART_Init();
  /* USER CODE BEGIN 2 */
  // 初始化电机控制（电机ID为1）
  MotorControl_Init(&motor1, 1);
  
  // 配置CAN过滤器，接收电机ID为1的反馈（0x201）
  CAN_InitFilter(1);
  
  // 设置CAN接收回调函数
  CAN_SetRxCallback(MotorFeedbackCallback);
  
  // 启动CAN接收
  CAN_StartReceive();
  
  // 使能电机控制
  MotorControl_SetEnable(&motor1, 1);
  
  // 设置初始目标角度为当前位置
  motor1.target_output_angle = motor1.total_output_angle;
  
  // 初始化控制时间
  last_control_time = HAL_GetTick();
  
  /* USER CODE END 2 */

  /* Infinite loop */
  /* USER CODE BEGIN WHILE */
  while (1)
  {
    /* USER CODE END WHILE */

    /* USER CODE BEGIN 3 */
    // 1KHz控制周期（1ms）
    uint32_t current_time = HAL_GetTick();
    if (current_time - last_control_time >= CONTROL_PERIOD_MS)
    {
      // 计算PID输出（角度外环 + 速度内环）
      int16_t current_command = MotorControl_Calculate(&motor1);
      
      // 发送控制命令给电机
      CAN_SendMotorCommand(motor1.motor_id, current_command);
      
      // 更新控制时间
      last_control_time = current_time;
    }
    
    // 检查是否有串口数据需要发送（在主循环中发送，避免在中断中阻塞）
    if (uart_send_data.data_ready)
    {
      uart_send_data.data_ready = 0;  // 清除标志
      UART_SendMotorFeedback(uart_send_data.motor_id,
                             uart_send_data.rotor_angle,
                             uart_send_data.rotor_speed,
                             uart_send_data.torque_current,
                             uart_send_data.temperature);
    }
    
    // 可以在这里添加其他逻辑，例如：
    // - 按键检测，触发正转/反转两圈
    //   示例：MotorControl_RotateTwoRoundsForward(&motor1);  // 正转两圈
    //   示例：MotorControl_RotateTwoRoundsReverse(&motor1);  // 反转两圈
    // - 状态监控
    // - 错误处理等
    
    HAL_Delay(1);  // 避免CPU占用过高
  }
  /* USER CODE END 3 */
}

