/**
  * @brief  The application entry point.
  * @retval int
  */
int main(void)
{

  /* USER CODE BEGIN 1 */

  /* USER CODE END 1 */

  /* MCU Configuration--------------------------------------------------------*/

  /* Reset of all peripherals, Initializes the Flash interface and the Systick. */
  HAL_Init();

  /* USER CODE BEGIN Init */

  /* USER CODE END Init */

  /* Configure the system clock */
  SystemClock_Config();

  /* USER CODE BEGIN SysInit */

  /* USER CODE END SysInit */

  /* Initialize all configured peripherals */
  MX_GPIO_Init();
  MX_TIM1_Init();
  MX_CAN_Init();
  /* USER CODE BEGIN 2 */
  
  // 初始化PID控制器
  pid_init(&motor_pid, 10.0f, 0.1f, 1.0f);  // 设置PID参数
  
  // 设置目标速度 (可以根据需要调整)
  motor_pid.target = 1000.0f;  // 目标速度为1000 RPM
  
  /* USER CODE END 2 */

  /* Infinite loop */
  /* USER CODE BEGIN WHILE */
  while (1)
  {
    /* USER CODE END WHILE */

    /* USER CODE BEGIN 3 */
    // 获取当前系统时间
    uint32_t current_time = HAL_GetTick();
    
    // 每10ms执行一次PID计算 (100Hz)
    if(current_time - last_pid_time >= 10)
    {
      // 从电机反馈中获取实际速度 (使用第一个电机的速度反馈)
      float actual_speed = (float)motor_feedback[0].speed;
      
      // 使用PID计算输出电流
      float output_current = pid_calculate(&motor_pid, motor_pid.target, actual_speed);
      
      // 控制电机 (这里控制ID为1的电机)
      can_dji_motor_control(1, (int16_t)output_current);
      
      // 更新上次执行时间
      last_pid_time = current_time;
    }
    
    // 添加一个小延迟以减少CPU占用
    HAL_Delay(1);
  }
  /* USER CODE END 3 */
}

